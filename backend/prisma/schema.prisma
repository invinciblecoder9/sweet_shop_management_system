generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Sweet {
  id       Int    @id @default(autoincrement())
  name     String
  category String
  price    Float
  quantity Int    @default(0)
}

enum Role {
  USER
  ADMIN
}
